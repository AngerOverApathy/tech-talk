<section class="sign-in-page">
    <div class="form-heading">
        <h1>Sign Up</h1>
    </div>
    <div class="form-section">
        <form class="signup-form">
            <div>
                <label for="username-signup">Create Your Username</label>
                <input type="text" class="entry-field" id="username-signup" />
            </div>
            <div>
                <label for="email-signup">Email:</label>
                <input type="text" id="email-signup" />
            </div>
            <div>
                <label for="password-signup">Create a Password</label>
                <input type="password" class="entry-field" id="password-signup" />
            </div>
            <div>
                <button type="submit" class="login-signup-btn">Sign Up</button>
            </div>
        </form>
    </div>
    <p>Already have an account?</p>
    <a href="/login" class="login-link">Log In</a>
</section>

<script src="/javascript/signup.js"></script>